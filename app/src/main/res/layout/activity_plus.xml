<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.five.high.emirim.testintent.PlusActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="402dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/자동완성"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:text="자동완성을 하시겠습니까?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f06060">

        <EditText
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:hint="텍스트를 복사 붙여넣기 하십시오."
            android:id="@+id/복사붙여넣기"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="316dp"
            android:layout_height="wrap_content"
            android:text="일정추가하기"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="#bbbec1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="날짜"
        android:layout_weight="0.1"/>
     <EditText
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:hint="예) 2017-09-13"
         android:ems="10"
         android:id="@+id/날짜"
         />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="시간"
        android:layout_weight="0.1"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="예) 17시"
        android:ems="5"
        android:id="@+id/시간"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">\
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="장소"
        android:layout_weight="0.1"/>

     <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="예) 학교"
            android:ems="7"
            android:id="@+id/장소"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_weight="0.1"
        android:text="내용"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="예) 가족들과 식사"
            android:ems="15"
            android:id="@+id/내용"/>
    </LinearLayout>
</LinearLayout>
